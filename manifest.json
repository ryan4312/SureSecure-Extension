{
 "manifest_version": 2,
 "name": "SureSecure",
 "description": "Sends credentials to your browser",
 "version": "1.0",
 "icons": {
           "48": "icons/unlocked.svg"
           },
 "permissions": [
                 "activeTab",
				 "tabs", 
				 "<all_urls>",
				 "contextMenus",
				 "menus",
				 "storage",
				 "tcp-socket"
                ],
"browser_action": {
"default_icon": "icons/unlocked.svg",
"default_popup": "popup.html"
                  },
				  
"background": {
		"scripts": [
			"background/contextmenu.js"
		]
	},
"content_scripts": [
                      {
                       "matches": ["<all_urls>"],
                       "js": ["contentscript.js"]
                      }
                    ]
 }